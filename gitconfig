[core]
	excludesfile = ~/.gitignore
    whitespace=fix,-indent-with-non-tab,trailing-space
	editor = vim
[color]
    branch = auto
    diff = auto
    status = auto
    interactive = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "status"]
    added = green
    changed = red
    untracked = cyan
[format]
    pretty = medium
[log]
    date = relative
[push]
    default = tracking
[rebase]
    stat = true
[alias]
    ci = commit
    co = checkout
    st = status
    df = diff
    dc = diff --cached
    rmc = rm --cached
    cp = cherry-pick
    ffo = merge --ff-only @{u}
    ffr = rebase origin/@{u}
    rpull = pull --rebase
    rb = rebase origin/@{u}
    ri = rebase --interactive
    graph = log --pretty=format:\"%C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%cr\" --graph --date=short
    detach = checkout HEAD^0
